<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<conversionRule conversionWord="traceid" converterClass="com.dbaotrung.example.coffee.store.converter.log.LogTraceIdConverter"/>
	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${logFilePath}/${logFileName}.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- rollover daily -->
			<fileNamePattern>${logFilePath}/archived/${logFileName}.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
			<!-- keep 30 days' worth of history -->
			<MaxHistory>30</MaxHistory>
			<!-- or whenever the file size reaches 10MB -->
			<timeBasedFileNamingAndTriggeringPolicy
					class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>10MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
			<maxHistory>10</maxHistory>
		</rollingPolicy>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<Pattern>%date{"yyyy-MM-dd'T'HH:mm:ss,SSS"} [%t] %traceid %5p %c:%L - %m%n</Pattern>
		</encoder>
	</appender>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>
				%date{"yyyy-MM-dd'T'HH:mm:ss,SSS"} [%t] %traceid %5p %c:%L - %m%n
			</Pattern>
		</layout>
	</appender>

	<!-- Logs for APIs classes -->
	<logger name="com.dbaotrung.example.coffee" level="DEBUG" />

	<!-- Spring framework logs. Should not turn to debug unless you know what you're doing. It's annoyed!!! -->
	<logger name="org.springframework" level="DEBUG" />
	<logger name="org.springframework.data.jpa" level="DEBUG" />
	<logger name="org.hibernate" level="WARN" />
	<logger name="com.zaxxer.hikari.HikariConfig" level="DEBUG" />

	<root level="INFO">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</root>

</configuration>